.payment
    display none
    background-color #e5e5e5
    position relative
    .header
        padding 10px
        display flex 
        justify-content space-between
        align-items center 
        .language-choice 
            padding 20px
            background-color #767474
            color white
    .price 
        padding 20px
        color #767474
        background-color white
        text-align center
        font-weight 500
        font-size 1.2rem
    form 
        padding 30px
        margin-top 10px
        background-color white
        color #6a6a6a
        .block
            display block
            margin-bottom 10px
            input 
                background-color #ebeaea
                height 32px
                border 1px solid silver
            #card-number 
                border-top-left-radius 5px
                border-bottom-left-radius 5px
            .question 
                width 15px
                height 15px 
                border 1px solid silver
                border-radius 50%
                color silver
                line-height 15px 
                text-align center
                margin-left 5px
                display inline-block
        .price-container 
            display flex 
            align-items center
        .expiration 
            display flex
            justify-content space-between
            .arrow-container
                display flex 
                align-items center
                input 
                    width 45%
                    border-top-left-radius 5px
                    border-bottom-left-radius 5px
                    border-right none
        button 
            display block
            padding 15px 
            width 50%
            margin 20px auto 0
            background-color #1d71f3  
            color white
            border none
            border-radius 5px
    .back-to-shop
        text-align right 
        font-size .8rem
        padding 10px
        border-bottom 2px solid silver
    .logo 
        display flex 
        justify-content center
        align-items center 
        gap 10px
        margin-top 20px
    .small-container 
        display flex 
        justify-content space-around
        color #847979
        small  
            padding 20px 
            a  
                color #847979
    .card-condition
        display none
        width 70%
        background-color white
        padding 0 20px 20px 10px
        font-size .8rem
        position absolute
        top 60px
        margin-left 10% 
        box-shadow 5px 5px 23px -7px #000000
        color #4c4949
        .cruz 
            display block  
            text-align right 
            padding 5px 0 20px 0
            font-size 1.2rem
    .crypto-condition
        display none
        width 70%
        background-color white
        padding 0 20px 20px 10px
        font-size .8rem
        position absolute
        top 160px
        margin-left 10% 
        box-shadow 5px 5px 23px -7px #000000
        color #4c4949
        .cruz 
            display block  
            text-align right 
            padding 5px 0 20px 0
            font-size 1.2rem
