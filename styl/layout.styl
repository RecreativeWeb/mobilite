* 
    margin 0 
    padding 0
    font-family "Roboto", sans-serif

.index
    display block
    height 100vh
    display flex 
    justify-content center 
    align-items center
    .aix-marseille 
        display block
        position absolute 
        bottom 0

.mobile
    display block
    
.error-connexion
    display none
    padding 100px 50px 50px 50px
    h2 
        padding 20px 
    p 
        padding-left 20px

@media screen and (min-width: 450px)
    header 
        display none
    .index, .mobile
        display none
    .error-connexion
        display block